	/**
	 * 获取实体对象(用户)
	 * 
	 * @param 用户名
	 * @return {@link User}/null
	 */
	public User getUserForName(String name) {
		if (Tool.isEmpty(name))
			return null;
		Enumeration<User> e = users.elements();
		User u = null;
		while (e.hasMoreElements()) {
			u = e.nextElement();
			if (name.equalsIgnoreCase(loginUser.getName())) {
				return u;
			}
		}
		return null;
	}

